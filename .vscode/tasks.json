{
    "version": "2.0.0",
    "presentation": {
        "echo": false,
        "showReuseMessage": false,
        "clear": true
    },
    "tasks": [
        {
            "label": "Build App",
            "type": "shell",
            "command": "poetry run python build.py",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Install Module from Selection",
            "type": "shell",
            "command": "poetry add ${selectedText}"
        },
        {
            "label": "Uninstall Module from Selection",
            "type": "shell",
            "command": "poetry remove ${selectedText}"
        }
    ],
}