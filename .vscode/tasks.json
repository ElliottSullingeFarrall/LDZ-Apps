{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create Requirements File",
            "type": "shell",
            "command": "${command:python.interpreterPath} -m pip list --format=freeze > '${file}'"
        },
        {
            "label": "Install Module from Selection",
            "type": "shell",
            "command": "${command:python.interpreterPath} -m pip install ${selectedText}"
        },
        {
            "label": "Uninstall Module from Selection",
            "type": "shell",
            "command": "${command:python.interpreterPath} -m pip uninstall ${selectedText} -y"
        },
        {
            "label": "Install Module from File",
            "type": "shell",
            "command": "${command:python.interpreterPath} -m pip install -r ${file}"
        },
        {
            "label": "Uninstall Module from File",
            "type": "shell",
            "command": "${command:python.interpreterPath} -m pip uninstall -r '${file}' -y"
        }
    ]
}