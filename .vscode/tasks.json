{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile App",
            "type": "shell",
            "command": "poetry run python compile.py",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Install Module from Selection",
            "type": "shell",
            "command": "poetry add ${selectedText}"
        },
        {
            "label": "Uninstall Module from Selection",
            "type": "shell",
            "command": "poetry remove ${selectedText}"
        }
    ]
}